function pow 2
         // Inicializa resultado em 1
         push constant 1
         pop local 0

         // Inicializa expoente restante com o valor do expoente
         push argument 1
         pop local 1

     label POW_LOOP_START
         // Se expoente restante == 0, sair do loop
         push local 1
         push constant 0
         eq
         if-goto POW_LOOP_END

         // Multiplica resultado pela base
         push local 0
         push argument 0
         call mult 2
         pop local 0

         // Decrementa o expoente restante
         push local 1
         push constant 1
         sub
         pop local 1

         // Loop de volta para o in√≠cio
         goto POW_LOOP_START

     label POW_LOOP_END
         // Empilha o resultado para retorno
         push local 0
         return
